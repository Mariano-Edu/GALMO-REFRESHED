<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Opportunity</field>
        <field>PrazoFinanciamentoTabela__c</field>
        <field>PrazoFinanciamentoProposta__c</field>
        <field>PorcentagemCaptacaoTabela__c</field>
        <field>PorcentagemCaptacaoProposta__c</field>
        <field>PorcentagemCaptacaoHabiteseTabela__c</field>
        <field>PorcentagemCaptacaoHabiteseProposta__c</field>
        <field>ValorNominalTabela__c</field>
        <field>ValorNominalProposta__c</field>
        <field>DiferencaNominalReal__c</field>
        <field>DiferencaNominalPorcentagem__c</field>
        <field>ValorVPLTabela__c</field>
        <field>ValorVPLProposta__c</field>
        <field>DiferencaVPLReal__c</field>
        <field>DiferencaVPLPorcentagem__c</field>
        <field>ValorTotalProposta__c</field>
        <field>ValorTotalComissao__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Processo da Cotação</label>
        <name>ProcessoCotacao</name>
    </approvalStep>
    <emailTemplate>Respostas_Cotacao/InicioProcesso</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Simulação</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>StatusAprovado</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>StatusReprovado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>EmAprovacao</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Processo da Cotação</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
