<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CelularComercialAdicional</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK( CelularComercialAdicional__c )),
NOT(REGEX(CelularComercialAdicional__c, &quot;[0-9]{11}&quot;))
)</errorConditionFormula>
    <errorDisplayField>CelularComercialAdicional__c</errorDisplayField>
    <errorMessage>O campo &quot;Celular Comercial Adicional&quot; deve ser preenchido no formato &quot;11999999999&quot;</errorMessage>
</ValidationRule>
