<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidacaoCelularJuridico</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(CelularJuridico__c)),
NOT(REGEX(CelularJuridico__c, &quot;[0-9]{11}&quot;))

)</errorConditionFormula>
    <errorDisplayField>PersonMobilePhone</errorDisplayField>
    <errorMessage>O campo &quot;Celular&quot; deve ser preenchido no formato &quot;11999999999&quot;</errorMessage>
</ValidationRule>
