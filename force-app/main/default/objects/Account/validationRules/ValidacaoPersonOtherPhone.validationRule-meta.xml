<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidacaoPersonOtherPhone</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(PersonOtherPhone)),
NOT(REGEX(PersonOtherPhone, &quot;[0-9]{10}&quot;))
)</errorConditionFormula>
    <errorDisplayField>PersonOtherPhone</errorDisplayField>
    <errorMessage>O campo &quot;Celular Pessoal Adicional&quot; deve ser preenchido no formato &quot;11999999999&quot;</errorMessage>
</ValidationRule>
