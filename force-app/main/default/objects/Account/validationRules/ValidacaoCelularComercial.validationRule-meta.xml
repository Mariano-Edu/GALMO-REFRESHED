<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidacaoCelularComercial</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(CelularAdicional__pc)),
NOT(REGEX(CelularAdicional__pc, &quot;[0-9]{11}&quot;))
)</errorConditionFormula>
    <errorDisplayField>CelularComercial__c</errorDisplayField>
    <errorMessage>O campo &quot;Celular Adicional&quot; deve ser preenchido no formato &quot;11999999999&quot;</errorMessage>
</ValidationRule>
